

<div class="content">
  <div class="container">
    <h1>User Page</h1>
      <p>Current Username: {{user.username}}</p>
    <div class="columns is-centered">
      
      <div class="column is-7-desktop is-12-mobile is-7-tablet is-7-widescreen">
        <form action="/user/update/{{user.id}}" method="POST" class="box">
          <div class="field">
            <label class="label">New Username:</label>
            <input type="text" class="input" name="newUsername" required>
          </div>
          <div class="field">
            <label class="label">New Password:</label>
            <input type="password" class="input" name="newPassword" required>
          </div>
          <div>
            <input class="button is-success" style="color:black !important;"
              type="submit" value="Update">
          </div>
        </form>
        <form action="/user/delete/{{user.id}}" method="POST"
          onsubmit="return confirm('Are you sure you want to delete your account?');">
          <button class="button is-danger" type="submit">Delete Account</button>
        </form>
        <h2>Favorite Stores</h2>
        {{#if favoriteStores.length}}
        <ul style="padding-bottom: 20px;">
          {{#each favoriteStores}}
          <li>
            <a href="/stores/{{this.title}}">
              {{this.title}}</a>
            <!-- Add a form to remove the store from favorites -->
            <form action="/stores/{{this.id}}/unfavorite" method="POST"
              style="display: inline;">
              <button type="submit"><i class="fas fa-trash-alt"></i></button>
            </form>
          </li>
          {{/each}}
        </ul>
        {{else}}
        <p>You have no favorite stores.</p>
        {{/if}}

      </div>
    </div>
  </div>
</div>
