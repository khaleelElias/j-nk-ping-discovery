{{#if stores.length}}
<div style="display: flex; flex-flow:wrap;">
	{{#each stores}}
	<section class="section">
		<div class="container">
			<div class="columns is-multiline">
				<div class="column">
					<div class="card p-1" style="min-width: 300px;">
						<a href="/stores/{{title}}">
							<div class="card-image mb-4 is-relative">
								<img class="image is-fullwidth is-rounded is-cover"
									style="height: 155px; object-fit: contain;"
									src="/icon/logo.jpg"
									alt="alt">
								
							</div>
							<div class="card-content">
								<div
									class="content is-flex is-justify-content-space-between is-align-items-center">
									<div>
										<h3 class="title is-size-6 mb-1">{{title}}</h3>
										<span class="subtitle" style="font-size: 12px;">subtitle</span>
									</div>
								
								</div>
							</div>
						</a>
					</div>
				</div>
			</section>

			{{/each}}
		</div>

		{{/if}}